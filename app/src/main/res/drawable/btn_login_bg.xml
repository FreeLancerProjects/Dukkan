<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<item android:state_pressed="false">
    <shape
        android:shape="rectangle"
        >
        <corners android:radius="15dp"/>
        <gradient
            android:startColor="@color/gradient_start_color"
            android:centerColor="@color/gradient_center_color"
            android:endColor="@color/gradient_end_color"/>
    </shape>
</item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle"
            >
            <corners android:radius="15dp"/>
            <gradient
                android:startColor="@color/gradient_start_color2"
                android:centerColor="@color/gradient_center_color2"
                android:endColor="@color/gradient_end_color2"/>
        </shape>
    </item>
</selector>
